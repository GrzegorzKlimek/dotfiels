# resize window (you can also use the mouse for that)
bindsym $mod+r exec /home/frezer02/scripts/i3/switch-mode.sh "resize"

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym m  resize set 1025 679 ;exec /home/frezer02/scripts/i3/switch-mode.sh "default"
        bindsym s  resize set 644 493 ;exec /home/frezer02/scripts/i3/switch-mode.sh "default"
        bindsym b  resize set 1403 793 ;exec /home/frezer02/scripts/i3/switch-mode.sh "default"
        # back to normal: Enter or Escape
        bindsym Return exec /home/frezer02/scripts/i3/switch-mode.sh "default"
        bindsym Escape exec /home/frezer02/scripts/i3/switch-mode.sh "default"
}

# launch mode

mode "launch" {
  bindsym  Shift+f exec firefox --private-window ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  f exec firefox  ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  4 exec flatpak run com.axosoft.GitKraken ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"; workspace $ws4;
  bindsym  h exec konsole -e bpytop ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  v  exec brave-browser --new-window https://meet.google.com/sgp-yzgm-tgh ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"; 
  bindsym  y exec firefox --new-window https://www.youtube.com/; exec /home/frezer02/scripts/i3/switch-mode.sh "default"; 
  bindsym  Shift+y exec chromium-browser --new-window https://www.youtube.com/; exec /home/frezer02/scripts/i3/switch-mode.sh "default"; 
  bindsym  Shift+h exec brave-browser  --app=http://127.0.0.1:8080/h2-console; workspace $ws4; exec /home/frezer02/scripts/i3/switch-mode.sh "default"; 
  bindsym  b exec brave-browser ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  Shift+b exec brave-browser --incognito ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  Shift+c exec chromium-browser --incognito ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  c exec chromium-browser ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  e exec dolphin  ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  Shift+e exec EDITOR=vim gnome-terminal --  ranger  ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  p exec kcmshell5 kcm_pulseaudio  ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  g exec gnome-calculator; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  bindsym  s exec konsole --profile "Dark Arc"; exec /home/frezer02/scripts/i3/switch-mode.sh "default"
  # bindsym  q exec flatpak run com.spotify.Client ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"; workspace $ws10
