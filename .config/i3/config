  bindsym  t  exec brave-browser --app=https://www.typingclub.com ; exec /home/frezer02/scripts/i3/switch-mode.sh "default"; 
  bindsym  k  exec kwrite; exec /home/frezer02/scripts/i3/switch-mode.sh "default";
