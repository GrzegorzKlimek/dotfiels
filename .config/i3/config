# resize window (you can also use the mouse for that)
bindsym $mod+r exec $SCRIPTS/i3/switch-mode.sh "resize"

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt
        bindsym m  resize set 1025 679 ;exec $SCRIPTS/i3/switch-mode.sh "default"
        bindsym s  resize set 644 493 ;exec $SCRIPTS/i3/switch-mode.sh "default"
        bindsym b  resize set 1403 793 ;exec $SCRIPTS/i3/switch-mode.sh "default"
        # back to normal: Enter or Escape
        bindsym Return exec $SCRIPTS/i3/switch-mode.sh "default"
        bindsym Escape exec $SCRIPTS/i3/switch-mode.sh "default"
}

# launch mode

mode "launch" {
  bindsym  Shift+f exec firefox --private-window ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  f exec firefox  ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  v exec $SCRIPTS/i3/meety.sh ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  y exec firefox --new-window https://www.youtube.com/; exec $SCRIPTS/i3/switch-mode.sh "default"; 
  bindsym  Shift+y exec chromium-browser --new-window https://www.youtube.com/; exec $SCRIPTS/i3/switch-mode.sh "default"; 
  bindsym  b exec brave-browser ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  Shift+b exec brave-browser --incognito ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  Shift+c exec chromium-browser --incognito ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  c exec gnome-calculator; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  e exec dolphin  ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  p exec kcmshell5 kcm_pulseaudio  ; exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym  g exec gnome-calculator; exec $SCRIPTS/i3/switch-mode.sh "default"
  # bindsym  q exec flatpak run com.spotify.Client ; exec $SCRIPTS/i3/switch-mode.sh "default"; workspace $ws10
  bindsym  q exec  spotify; exec $SCRIPTS/i3/switch-mode.sh "default"; workspace $ws10
  bindsym  w  exec gvim; exec $SCRIPTS/i4/switch-mode.sh "default";
  bindsym  t  exec brave-browser --app=https://translate.google.pl ; exec $SCRIPTS/i3/switch-mode.sh "default"; 
  bindsym  m  exec brave-browser --app=https://www.google.com/maps ; exec $SCRIPTS/i3/switch-mode.sh "default"; 
  # back to normal: Enter or Escape
  bindsym Return exec $SCRIPTS/i3/switch-mode.sh "default"
  bindsym Escape exec $SCRIPTS/i3/switch-mode.sh "default"
}

bindsym $mod2+space exec $SCRIPTS/i3/switch-mode.sh "launch"

